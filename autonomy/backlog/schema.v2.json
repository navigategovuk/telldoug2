{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://backroom-housing.local/autonomy/backlog/schema.v2.json",
  "title": "Autonomy Backlog Schema v2",
  "type": "object",
  "required": ["id", "title", "priority", "risk", "owner", "tasks"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "priority": { "enum": ["low", "medium", "high", "critical"] },
    "risk": { "enum": ["low", "medium", "high"] },
    "owner": { "type": "string", "minLength": 1 },
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "risk", "acceptance_checks", "rollback"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "title": { "type": "string", "minLength": 1 },
          "risk": { "enum": ["low", "medium", "high"] },
          "acceptance_checks": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          },
          "rollback": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 1 }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
