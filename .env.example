# =============================================================================
# TellDoug Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control

# =============================================================================
# DATABASE (Required)
# =============================================================================
FLOOT_DATABASE_URL=postgresql://user:password@localhost:5432/telldoug

# =============================================================================
# AUTHENTICATION (Required)
# =============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here

# Session configuration
SESSION_SECRET=your-session-secret-here

# =============================================================================
# OAUTH PROVIDERS (Optional - for social login)
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/_api/auth/oauth/callback?provider=google

# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3000/_api/auth/oauth/callback?provider=github

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_CALLBACK_URL=http://localhost:3000/_api/auth/oauth/callback?provider=linkedin

# =============================================================================
# AI SERVICES (Optional - for AI chat features)
# =============================================================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
ENABLE_AI_CHAT=true
ENABLE_LINKEDIN_IMPORT=true
ENABLE_RESUME_EXPORT=true
